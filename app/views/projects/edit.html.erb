<h1>Edit page</h1>

<%= form_for @project do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description, cols:30, rows:7 %>
  </p>
  <p>
    <%= f.label :target_pledge_amount %> <br>
    <%= f.number_field :target_pledge_amount %>
  </p>
  <p>
    <%= f.label :will_achieve %> <br>
    <%= f.date_select :will_achieve %>
  </p>

  <%= f.submit %>
  <% end %>